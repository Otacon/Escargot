<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Text?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
    <VBox alignment="CENTER">
        <padding>
            <Insets bottom="25.0" left="50.0" right="50.0" top="25.0"/>
        </padding>
        <Text fx:id="progressText" strokeType="OUTSIDE" strokeWidth="0.0" text="Logging in..." textAlignment="CENTER"
              wrappingWidth="250.0">
        </Text>
        <ProgressBar fx:id="progressBar" maxWidth="1.7976931348623157E308">
            <VBox.margin>
                <Insets bottom="20.0" top="20.0"/>
            </VBox.margin>
        </ProgressBar>
        <HBox spacing="15.0">
            <Button fx:id="retryButton" minWidth="80.0" mnemonicParsing="false" text="Retry"/>
            <Button fx:id="cancelButton" minWidth="80.0" mnemonicParsing="false" text="Cancel"/>
            <Button fx:id="okButton" minWidth="80.0" mnemonicParsing="false" text="Ok"/>
        </HBox>
    </VBox>
</Scene>