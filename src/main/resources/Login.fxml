<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<Scene xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1">
     <VBox id="layout_login" alignment="CENTER" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="500.0" prefWidth="350.0">
         <Label text="Welcome Back!" textAlignment="CENTER">
             <font>
                 <Font size="24.0" />
             </font>
         <VBox.margin>
            <Insets bottom="32.0" />
         </VBox.margin>
         </Label>
         <VBox maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" style="-fx-border-color: darkgrey;">
             <padding>
                 <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
             </padding>
             <TextField id="username" promptText="Username">
                 <VBox.margin>
                     <Insets />
                 </VBox.margin>
             </TextField>
             <PasswordField id="password" promptText="password">
                 <VBox.margin>
                     <Insets top="16.0" />
                 </VBox.margin>
             </PasswordField>
             <ComboBox maxWidth="1.7976931348623157E308" promptText="Access as">
                 <VBox.margin>
                     <Insets top="16.0" />
                 </VBox.margin>
             </ComboBox>
             <CheckBox id="check_remember_user_profile" mnemonicParsing="false" text="Remember user profile">
                 <VBox.margin>
                     <Insets top="32.0" />
                 </VBox.margin>
             </CheckBox>
             <CheckBox id="check_remember_password" mnemonicParsing="false" text="Remember password">
                 <VBox.margin>
                     <Insets top="16.0" />
                 </VBox.margin>
             </CheckBox>
             <CheckBox id="check_access_automatically" mnemonicParsing="false" text="Access automatically">
                 <VBox.margin>
                     <Insets top="16.0" />
                 </VBox.margin>
             </CheckBox>
         </VBox>
         <Button id="button_login" disable="true" mnemonicParsing="false" text="Login">
             <VBox.margin>
                 <Insets top="32.0" />
             </VBox.margin>
         </Button>
      <padding>
         <Insets bottom="60.0" left="60.0" right="60.0" top="60.0" />
      </padding>
     </VBox>
</Scene>
