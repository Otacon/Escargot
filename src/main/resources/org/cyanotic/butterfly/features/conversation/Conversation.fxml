<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.Scene?>
<?import javafx.scene.text.Font?>
<Scene xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1">
    <GridPane hgap="10.0" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="480.0"
              prefWidth="640.0" vgap="10.0">
        <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" maxWidth="1.7976931348623157E308" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="NEVER" maxWidth="148.0" minWidth="148.0" prefWidth="148.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="NEVER"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
        </padding>
        <VBox spacing="5.0" GridPane.columnSpan="2">
            <Label fx:id="nicknameLabel" text="Contact">
                <font>
                    <Font name="System Bold" size="18.0"/>
                </font>
            </Label>
            <Label fx:id="personalMessageLabel" text="Personal Message" textFill="gray"/>
        </VBox>
        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="128.0"
              prefWidth="128.0" style="-fx-border-color: lightgrey; -fx-border-radius: 4;" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.valignment="TOP"
              GridPane.vgrow="NEVER">
            <ImageView fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true">
                <Image url="@../../../../../images/blank-profile.png"/>
            </ImageView>
        </Pane>
        <Pane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="128.0"
              prefWidth="128.0" style="-fx-border-color: lightgrey; -fx-border-radius: 4;" GridPane.columnIndex="1"
              GridPane.halignment="CENTER" GridPane.hgrow="NEVER" GridPane.rowIndex="2" GridPane.valignment="BOTTOM"
              GridPane.vgrow="NEVER">
            <GridPane.margin>
                <Insets bottom="20.0"/>
            </GridPane.margin>
            <ImageView fitHeight="128.0" fitWidth="128.0" pickOnBounds="true" preserveRatio="true">
                <viewport>
                    <Rectangle2D height="128.0" width="128.0"/>
                </viewport>
                <Image url="@../../../../../images/blank-profile.png"/>
            </ImageView>
        </Pane>
        <SplitPane dividerPositions="0.8" orientation="VERTICAL" prefHeight="200.0" prefWidth="160.0"
                   GridPane.rowIndex="1" GridPane.rowSpan="2147483647">
            <VBox>
                <ListView fx:id="historyListView">
                    <opaqueInsets>
                        <Insets bottom="1.0" left="1.0" right="1.0" top="1.0"/>
                    </opaqueInsets>
                </ListView>
                <Label fx:id="historyFooter">
                    <VBox.margin>
                        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
                    </VBox.margin>
                </Label>
            </VBox>
            <HBox prefHeight="100.0" prefWidth="200.0">
                <TextArea fx:id="typingTextArea" promptText="Enter your message here. Hit enter to send it."
                          wrapText="true"/>
                <VBox prefHeight="200.0" prefWidth="100.0" spacing="5.0">
                    <Button fx:id="sendButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                            minWidth="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                        <tooltip>
                            <Tooltip text="Send"/>
                        </tooltip>
                    </Button>
                    <Button fx:id="nudgeButton" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity"
                            minWidth="-Infinity" mnemonicParsing="false" prefHeight="32.0" prefWidth="32.0">
                        <tooltip>
                            <Tooltip text="Nudge"/>
                        </tooltip>
                    </Button>
                </VBox>
            </HBox>
        </SplitPane>
    </GridPane>
</Scene>
